        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "jsx": "react",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ], 
    "exclude": [
        "node_modules",
        "build"
    ]
}